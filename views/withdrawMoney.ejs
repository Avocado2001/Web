<%- include('./layouts/head.ejs') %>

    <body>
        <div class="wrapper">
            <%- include('./layouts/nav-user.ejs') %>
                <div class="main-panel">
                    <div class="container mt-5">
                        <div class="card mb-3" style="border-radius: .5rem;">
                            <div class="row g-0 p-4">
                                <h1>Rút tiền</h1>
                                <form action="/user/withdrawMoney" method="post">
                                  <!-- số the và ngày hết hạn -->
                                  <div class="row mb-4">
                                    <div class="col">
                                        <div class="form-group">
                                            <label class="form-label" for="numberCard">Số thẻ</label>
                                            <input type="text" name="numberCard" id="numberCard" class="form-control" />
                                           
                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <label class="form-label" for="dateExp">Ngày hết hạn</label>
                                            <input type="date" name="dateExp" id="dateExp" class="form-control" />
                                            
                                        </div>
                                    </div>
                                  </div>

                                   <!-- Mã Cvv và số tiền rút -->
                                   <div class="row mb-4">
                                    <div class="col">
                                <div class="form-group">
                                    <label class="form-label" for="cvv">Mã CVV</label>
                                    <input type="text" name="cvv" id="cvv" class="form-control" />
                                    
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <label class="form-label" for="money">Số tiền rút</label>
                                    <input type="number" min="0.0" name="money" id="money" class="form-control" />
                                </div>
                            </div>
                        </div>



                            <!-- chưa làm -->
                                    <!-- ghi chú -->
                                    <div class="mb-3">
                                        <label for="exampleFormControlTextarea1" class="form-label">Ghi chú</label>
                                        <textarea class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                                    </div>


<!-- ============================= -->





                                    <% if(error){ %>
                                        <div class="alert alert-danger mb-3">
                                            <strong>Lưu ý!</strong>
                                            <%= error %>
                                        </div>
                                        <%}%>
                                            <!-- Submit button -->
                                            <button type="submit" class="btn btn-primary btn-block ">Rút</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        <script src="/Js/main.js"></script>

    </body>

    </html>