<%- include('./layouts/head.ejs') %>

    <body>
        <div class="wrapper">
            <%- include('./layouts/nav-admin.ejs') %>
                <div class="main-panel p-4 ">
                    <section class="h-100 ">
                        <div class="container py-5 h-100">
                          <div class="row d-flex justify-content-center align-items-center h-100">
                            <div class="col col-lg-9 col-xl-7">
                              <div class="card">
                                <div class="rounded-top text-white d-flex flex-row" style="background-color: #000; height:200px;">
                                  <div class="ms-4 mt-5 d-flex flex-column" style="width: 150px;">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-profiles/avatar-1.webp"
                                      alt="Generic placeholder image" class="img-fluid img-thumbnail mt-4 mb-2"
                                      style="width: 150px; z-index: 1">
                                    <!-- <button type="button" class="btn btn-outline-dark" data-mdb-ripple-color="dark"
                                      style="z-index: 1;">
                                      Edit profile
                                    </button> -->
                                  </div>
                                  <div class="ms-3" style="margin-top: 130px;">
                                    <h5><%=user.fullname%></h5>
                                    <p>
                                      <% if(user.status === 0){ %>
                                        <span class="badge rounded-pill bg-primary text-dark mb-2">Chưa xác minh</span>
                                                <% } %>
                                    </p>
                                  </div>
                                </div>
                                <div class="p-4 text-black" style="background-color: #f8f9fa;">
                                  <div class="d-flex justify-content-end text-center py-1">
                                    <!-- <div>
                                      <p class="mb-1 h5">253</p>
                                      <p class="small text-muted mb-0">Photos</p>
                                    </div>
                                    <div class="px-3">
                                      <p class="mb-1 h5">1026</p>
                                      <p class="small text-muted mb-0">Followers</p>
                                    </div>
                                    <div>
                                      <p class="mb-1 h5">478</p>
                                      <p class="small text-muted mb-0">Following</p>
                                    </div> -->
                                  </div>
                                </div>
                                <div class="card-body p-4 text-black">
                                  <div class="mb-5">
                                    <p class="lead fw-normal mb-1">THÔNG TIN</p>
                                    <div class="p-4" style="background-color: #f8f9fa;">
                                      <p class="font-italic mb-1">Email: <%= user.email %></p>
                                      <p class="font-italic mb-1">Phone: <%= user.phone %></p>
                                      <p class="font-italic mb-0">Birthday: <%= user.birthday%></p>
                                      <p class="font-italic mb-0">Địa chỉ: <%= user.address%></p>
                                    </div>
                                  </div>
                                  <div class="d-flex justify-content-between align-items-center mb-4">
                                    <p class="lead fw-normal mb-0">Ảnh chứng minh nhân dân</p>
                                    <p class="mb-0"><a href="#!" class="text-muted">Show all</a></p>
                                  </div>
                                  <div class="row g-2">
                                    <div class="col mb-2">
                                      <img src="/uploads/<%=user.idcard_front%>"
                                        alt="Ảnh CMND mặt trước" class="w-100 rounded-3">
                                    </div>
                                    <div class="col mb-2">
                                      <img src="/uploads/<%= user.idcard_back%>"
                                        alt="Ảnh CMND mặt sau" class="w-100 rounded-3">
                                    </div>
                                  </div>
                                  <div class="row ">
                                    <div class="col-3 mb-1 text-center">
                                        <form method="post" >
                                            <button value="1" name="status" class="btn btn-primary" >Xác minh</button>
                                       </form>
                                    </div>
                                    <div class="col-6 mb-1 text-center">
                                        <form method="post">
                                            <button value="0"name="status" class="btn btn-warning">Yêu cầu bổ sung thông tin</button>
                                    </form>
                                    </div>
                                    <div class="col-3 mb-1 text-center">
                                        <form method="post"> 
                                            <button value="3"name="status" class="btn btn-danger">Huỷ</button>
                                        </form>
                                    </div>
                                  </div>
                                    </div>
                                  </div>
                                </div>
                              </div>
                            </div>
                          </div>
                        </div>
                      </section>
                </div>
        </div>
    </body>

    </html>