<%- include('./layouts/head.ejs') %>

    <body>
        <div class="wrapper">
            <%- include('./layouts/nav-admin.ejs') %>
                <div class="main-panel">
                    <div class="container mt-5">
                        <div class="card mb-3" style="border-radius: .5rem;">
                            <div class="row g-0 p-4">
                                <div class="card-body p-4">
                                <h6>Chi tiết giao dịch</h6>
                                <% if(transaction.status_transation === 0) { %>
                                    <span class="badge badge-success  rounded-pill d-inline">Duyệt</span> 
                                    <% }else if(transaction.status_transation === 1){ %>
                                        <span class="badge  badge-primary rounded-pill d-inline">Chờ duyệt</span>
                                        <% }else{ %>
                                          <span class="badge badge-warning rounded-pill d-inline">Từ chối</span>
                                          <% } %>
                                <hr class="mt-0 mb-4">
                                <div class="row mb-4">
                                    <div class="col">
                                        <div class="form-group">
                                            <h6>Mã giao dịch</h6>
                                            <p class="text-muted">
                                                <%= transaction._id %>
                                            </p>

                                        </div>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <h6>Phí giao dịch</h6>
                                            <p class="text-muted">
                                                <%= transaction.money%>
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <hr class="mt-0 mb-4">
                                <div class="row mb-4">
                                    <div class="col">
                                        <h6>Lời nhắn</h6>
                                            <p class="text-muted">
                                              
                                            </p>
                                    </div>
                                    <div class="col">
                                        <div class="form-group">
                                            <h6>Số tiền rút</h6>
                                            <p class="text-muted">
                                               
                                            </p>

                                        </div>
                                    </div>
                                </div>
                                <!--các button-->
                                <hr class="mt-0 mb-4">
                                <div class="row mb-4">
                                    <div class="col">
                                        <form method="post" >
                                            <button value="1" name="status" class="btn btn-primary" >Xác minh</button>
                                       </form>
                                    </div>
                                    <div class="col">
                                        <div class="form-group"> 
                                            <form method="post"> 
                                                <button value="3"name="status" class="btn btn-danger">Huỷ</button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                               
                            </div>
                        
                        
                        </div>
                        </div>
                    </div>
                </div>
        </div>
    </body>

    </html>