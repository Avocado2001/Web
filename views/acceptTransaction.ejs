<%- include('./layouts/head.ejs') %>

    <body>
        <div class="wrapper">
            <%- include('./layouts/nav-admin.ejs') %>
                <div class="main-panel">
                  <h1>Quản lý giao dịch</h1>
                    <table class="table align-middle mb-0 bg-white">
                        <thead class="bg-light">
                            <tr>
                                <th>THỨ TỰ GIAO DỊCH</th>
                                <th>MÃ GIAO DỊCH</th>
                                <th>TÀI KHOẢN GIAO DỊCH</th>
                                <th>TIỀN GIAO DỊCH</th>
                                <th>LOẠI GIAO DỊCH</th>
                                <th>TRẠNG THÁI</th>
                             
                                <th>NGÀY GIAO DỊCH</th>
                              
                            </tr>
                        </thead>
                        <tbody>
                          

                            <% transaction.forEach(function(h,index) { %>
                              <tr>
                                <td>
                                  <%= (index + 1) %>
                                </td>
                                <td>
                                  <%= h._id %>
                                </td>
                                <td>
                                  <%= h.username %>
                                </td>
                                <td>
                                    <%=h.money.toLocaleString("en-US")%>
                                  </td>
                                  <!-- kind-chuyển tiền: 0, nạp tiền: 1, rút tiền: 2, mua thẻ: 3 -->  
                                  <td>
                                      <% if(h.kind === 0) { %>
                                          <span class="badge badge-success rounded-pill d-inline">Chuyển tiền</span> 
                                              <% }else if(h.kind === 2){ %>
                                                  <span class="badge badge-success rounded-pill d-inline">Rút tiền</span>
                                                  <% }else{ %>
                                                      <span class="badge badge-success rounded-pill d-inline">Mua thẻ</span>
                                                      <% } %>

                                  </td>
                                  <!-- 0:duyệt, 1:chờ duyệt, 2:từ chối -->
                                  <td> 

                                      <% if(h.status_transation === 1){ %>
                                          <span class="badge  badge-primary rounded-pill d-inline">Chờ duyệt</span>

                                            <% } %>
                                  </td>
                                  <td>
                                    <%=h.time.toLocaleString('vi-VN', { hour12: true })%>
                                  </td>
                               
                              </tr>
                                <% }); %>
                        </tbody>
                        
                    </table>
                </div>
        </div>
    </body>

    </html>